// Librer√≠as AVRLIBC
#include <avr/io.h>
#include <avr/delay.h>
#include <avr/pgmspace.h>
//Datos y definimos puertos
#define puerto_out PORTB
#define puerto_check PORTA
#define RS 0
#define RW 1
#define E 2
#define DDRB 0xFF
#define DDRC 0x0F
int main(void)
	{	
		//Enable y RS como salida
		_delay_ms(20);
		puerto_out =0x30;
		puerto_check &=(~(1<<RS)|(~(1<<RW)));
		_delay_ms(10);
		puerto_out =0x30;
		puerto_check &=(~(1<<RS)|(~(1<<RW)));
		_delay_us(100);
		puerto_out =0x30;
		puerto_check &=(~(1<<RS)|(~(1<<RW)));
		_delay_ms(15);
		LCD_Mando(0x38);
		LCD_Mando(0x0D);
		LCD_Mando(0x01);
		LCD_Mando(0x06);
	}
	
void LCD_Mando(unsigned char comando)
	{
		puerto_out=comando;
		puerto_check &=(~(1<<RS));
		puerto_check &=(~(1<<RW));
		puerto_check|= (1<<E);
		_delay_ms(5);
		puerto_check &=(~(1<<E));
	}
	
void LCD_Dato(unsigned char dato)
	{
		puerto_out=dato;
		puerto_check &=(~(1<<RW));
		puerto_check |=(1<<RS);
		puerto_check |=(1<<E);
		_delay_ms(10);
		puerto_check &=(~(1<<E));
	}
	
void Clear(void)
	{
		LCD_Mando(0x01);
		_delay_ms(10);
	}
	
void posicion_para_mostrar(unsigned char x,unsigned char y)
	{
		unsigned char firstAddress[] = {0x00,0xc0};
		if(y==1)
			{
				LCD_Mando(firstAddress[y-1] + x-1);
				_delay_ms(10);
			}
		if(y==2)
			{
				LCD_Mando(firstAddress[y-1] + x-1);
				_delay_ms(10);
			}
	}
	
void mostrar(char *string)
	{
		unsigned char i ;
		i=0;
		while(string[i]!=0)
			{
				LCD_Dato(string[i]);
				i++;
			}
	}
